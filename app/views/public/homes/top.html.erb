<style>@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap');</style>

    <div class="wrapper flex">
  	  <main class="top">

        <section class="top-1">
          <img class="top_img" src="assets/FT_sitetop.jpg"></img>
          <div class="top-message-box">
            <div class="top-message">
            	Be Natural,</br>
            	Be Natural.
            </div>
          </div>
        </section>

        <section class="top-2">
          <h2 class="section-ttl">オススメ商品</h2>
          <div class="items">
          	<% @items.each do |item| %>
          	  <%= link_to item_path(item) do %>
          	  <%= attachment_image_tag item, :image, format: "jpeg", fallback: "no-image.png", size: "200x200" %>
          	    <p>
          	      <%= item.name %>
          	    </p>
          	    <p>
          	      <% tax_in = item.price * 1.10 %>
                  ¥<%= tax_in.round.to_s(:delimited) %>
                </p>
          	  <% end %>
          	<% end %>
          </div>
        </section>

      </main>
    </div>